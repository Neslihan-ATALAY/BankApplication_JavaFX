<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane
    xmlns:fx="http://javafx.com/fxml"
    fx:controller="main.java.com.neslihanatalay.BankApp.controller.UserController"
    alignment="center" hgap="10" vgap="10"
    style="-fx-padding: 20;">

    <Label text="Ad:" GridPane.rowIndex="0" GridPane.columnIndex="0" />
    <TextField fx:id="nameField" GridPane.rowIndex="0" GridPane.columnIndex="1" />

    <Label text="Soyad:" GridPane.rowIndex="1" GridPane.columnIndex="0" />
    <TextField fx:id="surnameField" GridPane.rowIndex="1" GridPane.columnIndex="1" />

    <Label text="Şifre:" GridPane.rowIndex="2" GridPane.columnIndex="0" />
    <PasswordField fx:id="passwordField" GridPane.rowIndex="2" GridPane.columnIndex="1" />

    <Label text="TC Kimlik Numarası:" GridPane.rowIndex="3" GridPane.columnIndex="0" />
    <TextField fx:id="TCNumberField" GridPane.rowIndex="3" GridPane.columnIndex="1" />

    <Label text="Adres:" GridPane.rowIndex="4" GridPane.columnIndex="0" />
    <TextField fx:id="addressField" GridPane.rowIndex="4" GridPane.columnIndex="1" />

    <Button text="Kullanıcı Kaydet" onAction="#userRegister" GridPane.rowIndex="5" GridPane.columnIndex="1" />
</GridPane>
